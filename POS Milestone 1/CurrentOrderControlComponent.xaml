<UserControl x:Class="POS_Milestone_1.CurrentOrderControlComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:POS_Milestone_1"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <DockPanel>
        <TextBlock Name="currentOrderTextBlock" TextAlignment="Center" DockPanel.Dock="Top" Text="Order #100"/>
        <TextBlock Name="totalTextBlock" TextAlignment="Center" DockPanel.Dock="Bottom" Text="Total: "/>
        <TextBlock Name="taxTextBlock" TextAlignment="Center" DockPanel.Dock="Bottom" Text="Tax: "/>
        <TextBlock Name="subTotalTextBlock" TextAlignment="Center" DockPanel.Dock="Bottom" Text="Subtotal: "/>
        <ListView Name="orderListView"/>
    </DockPanel>
</UserControl>
